{
  "name": "memory-size-hover",
  "displayName": "Memory Size Hover",
  "description": "Shows memory size of variable types on hover for C/C++",
  "version": "1.0.14",
  "publisher": "AzehLM",
  "author": "AzehLM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AzehLM/memory-size-hover.git"
  },
  "bugs": {
    "url": "https://github.com/AzehLM/memory-size-hover/issues"
  },
  "homepage": "https://github.com/AzehLM/memory-size-hover#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "c",
    "cpp",
    "h",
    "hpp",
    "memory",
    "size",
    "hover",
    "types"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Memory Size Hover",
      "properties": {
        "memorySizeHover.showArchitecture": {
          "type": "boolean",
          "default": true,
          "description": "Show architecture information in hover tooltip"
        },
        "memorySizeHover.architecture": {
          "type": "string",
          "enum": [
            "auto",
            "target",
            "x64",
            "x32"
          ],
          "default": "auto",
          "markdownDescription": "Architecture used for size calculations. `auto` uses host arch, `target` tries to read `C_Cpp.default.intelliSenseMode` and if fails fallback to host arch."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./",
    "test": "echo 'No tests specified' && exit 0",
    "install-deps": "npm install",
    "build": "mkdir -p out && npx tsc",
    "postinstall": "echo 'Dependencies installed successfully'",
    "package": "npx vsce package",
    "install-local": "npm run package && code --install-extension *.vsix",
    "publish": "vsce publish",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  }
}
